{# Footer Component #}
{% macro footer(data) %}
<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <div class="footer__section">
        <h3 class="footer__title">{{ data.about.title }}</h3>
        <p class="footer__text">{{ data.about.description }}</p>
      </div>

      <div class="footer__section">
        <h3 class="footer__title">{{ data.quickLinks.title }}</h3>
        <ul class="footer__links">
          {% for link in data.quickLinks.links %}
            <li>
              <a href="{{ link.url }}" class="footer__link">{{ link.text }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="footer__section">
        <h3 class="footer__title">{{ data.contact.title }}</h3>
        <ul class="footer__contact">
          {% for item in data.contact.items %}
            <li class="footer__contact-item">{{ item }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">{{ data.copyright }}</p>
    </div>
  </div>
</footer>
{% endmacro %}
